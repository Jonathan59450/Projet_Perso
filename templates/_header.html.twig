<header class="py-3 px-3 shadow-sm bg-white">
    <div class="container-fluid d-flex justify-content-between align-items-center flex-wrap">
        
        {# 1. LOGO à GAUCHE et Nom de Marque #}
        <div class="d-flex align-items-center">
            <a href="{{ path('app_accueil') }}" class="d-flex align-items-center text-decoration-none text-dark">
                <div class="logo001 me-3">
                    <img src="{{ asset('image/Aether core logo.png') }}" alt="logo" style="max-height: 80px;">
                </div>
                <span class="fs-4 fw-bold d-none d-md-inline">Aether Core</span> 
            </a>
        </div>
        
        {# 2. MENU DE NAVIGATION (Centré) #}
        <div class="d-flex justify-content-center mx-auto"> 
            <div class="fs-4 d-flex gap-4 align-items-center fw-medium">
                
                <a href="{{ path('app_accueil') }}" class="text-dark text-decoration-none">
                    Accueil
                </a>
                
                <a href="{{ path('app_hardware') }}" class="text-dark text-decoration-none">
                    Hardware
                </a>
                
                <a href="{{ path('app_jeux') }}" class="text-dark text-decoration-none">
                    Jeux
                </a>
            </div>
        </div>
        
        {# 3. BOUTONS D'ACTION (À DROITE) - Logique Connexion/Mon Compte #}
        <div class="d-flex gap-2 align-items-center">
            
            {# Lien CONTACT statique #}
            <a href="{{ path('app_contact') }}" class="btn btn-info btn-sm d-none d-md-inline-flex">Contact</a>

            {# ⚠️ LOGIQUE CONDITIONNELLE CLÉ ⚠️ #}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                
                {# UTILISATEUR CONNECTÉ : "Mon Compte" et "Déconnexion" #}
                <a href="{{ path('app_account') }}" class="btn btn-warning btn-sm d-none d-md-inline-flex ">
                    Mon Compte
                </a>
                <a href="{{ path('app_logout') }}" class="btn btn-success btn-sm d-none d-md-inline-flex text-dark">
                    Déconnexion
                </a>
                
            {% else %}
                
                {# UTILISATEUR DÉCONNECTÉ : "S'inscrire" et "Connexion" #}
                <a href="{{ path('app_inscription') }}" class="btn btn-success btn-sm">
                    S'inscrire
                </a>
                <a href="{{ path('app_connexion') }}" class="btn btn-warning btn-sm">
                    Connexion
                </a>
                
            {% endif %}

        </div>
    </div>
</header>