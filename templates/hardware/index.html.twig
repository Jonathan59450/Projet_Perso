{% extends 'base.html.twig' %}

{% block title %}Matériel Informatique{% endblock %}

{% block body %}

{% include '_partials/_header.html.twig' %}

<h1>Cartes Graphiques (GPU)</h1>

<h2>NVIDIA GeForce</h2>
<div class="card-container">
    {% for gpu in gpus.nvidia %}
        <div class="card">
            <div class="card-content">
                <h3>{{ gpu.name }}</h3>
                <p>{{ gpu.description }}</p>
                <ul>
                    <li><strong>VRAM:</strong> {{ gpu.vram }}</li>
                    <li><strong>Interface:</strong> {{ gpu.interface }}</li>
                    <li><strong>TDP:</strong> {{ gpu.tdp }}</li>
                </ul>
            </div>
        </div>
    {% endfor %}
</div>

