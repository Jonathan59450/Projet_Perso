{% extends 'base.html.twig' %}

{% block title %}Connexion - Aether core{% endblock %}

{% block body %}
    <div class="container my-5 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="card home-card shadow-lg p-4 w-100">
                    <div class="card-body">
                        <h1 class="card-title text-center text-warning mb-4 fw-bold">Connexion</h1>
                        
                        {# ✅ AFFICHAGE DE L'ERREUR #}
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <form method="post" action="{{ path('app_connexion') }}"> 
                            
                            <div class="mb-4">
                                <label for="inputUsername" class="form-label-custom">Email / Nom d'utilisateur</label>
                                {# Nom de champ correct pour Symfony Security #}
                                <input type="text" value="{{ last_username }}" name="email" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                            </div>

                            <div class="mb-5">
                                <label for="inputPassword" class="form-label-custom">Mot de passe</label>
                                {# Nom de champ correct pour Symfony Security #}
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>
                            
                            {# Jeton CSRF de sécurité (Obligatoire) #}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {# Optionnel : se souvenir de moi #}
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>

                            <div class="col-12 text-center">
                                <button class="btn btn-warning w-75 fw-bold" type="submit">
                                    Se connecter
                                </button>
                            </div>
                        </form>
                        
                        <div class="text-center mt-3">
                            <a href="#" class="text-secondary small text-decoration-none">Mot de passe oublié ?</a>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    Pas encore de compte ? <a href="{{ path('app_inscription') }}" class="text-success fw-bold text-decoration-none">Créer un compte</a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}